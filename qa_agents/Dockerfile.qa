# Python environment for QA agents
FROM python:3.12-slim

WORKDIR /app

# Install system dependencies for Playwright
RUN apt-get update && apt-get install -y \
    wget \
    gnupg \
    ca-certificates \
    fonts-liberation \
    libnss3 \
    libxss1 \
    libasound2 \
    && rm -rf /var/lib/apt/lists/*

# Copy Python requirements
COPY qa_agents/requirements.txt /app/qa_agents/
RUN pip install --no-cache-dir -r /app/qa_agents/requirements.txt

# Install Playwright browsers
RUN playwright install chromium

# Copy QA agent code
COPY qa_agents /app/qa_agents

# Set Python path
ENV PYTHONPATH=/app

WORKDIR /app

CMD ["python3", "-m", "qa_agents.run_responsive_review"]
