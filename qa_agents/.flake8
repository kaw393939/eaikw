[flake8]
# Maximum line length
max-line-length = 120

# Ignore specific errors
ignore =
    # E501: Line too long (handled by max-line-length)
    E501,
    # W503: Line break before binary operator (conflicts with black)
    W503,
    # E203: Whitespace before ':' (conflicts with black)
    E203,
    # F401: Module imported but unused (needed for type hints)
    F401,
    # E402: Module level import not at top of file (intentional)
    E402

# Exclude directories
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    venv,
    archive,
    screenshots,
    examples

# Per-file ignores
per-file-ignores =
    __init__.py:F401
