          <div>
            <label for="linkedin_url" class="block text-sm font-medium text-gray-700 mb-2">
              LinkedIn Profile URL
            </label>
            <input 
              type="url" 
              id="linkedin_url" 
              name="linkedin_url"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="https://linkedin.com/in/yourprofile"
            >
          </div>

          <div>
            <label for="github_url" class="block text-sm font-medium text-gray-700 mb-2">
              GitHub Profile URL
            </label>
            <input 
              type="url" 
              id="github_url" 
              name="github_url"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="https://github.com/yourprofile"
            >
          </div>

          <div>
            <label for="portfolio_url" class="block text-sm font-medium text-gray-700 mb-2">
              Personal Portfolio Website
            </label>
            <input 
              type="url" 
              id="portfolio_url" 
              name="portfolio_url"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="https://yourportfolio.com"
            >
          </div>

          <div>
            <label for="calendly_url" class="block text-sm font-medium text-gray-700 mb-2">
              Calendly Link (for scheduling meetings)
            </label>
            <input 
              type="url" 
              id="calendly_url" 
              name="calendly_url"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="https://calendly.com/yourname"
            >
          </div>
        </div>
      </fieldset>

      <!-- Consent -->
      <fieldset class="mb-8">
        <div class="flex items-start">
          <input 
            type="checkbox" 
            id="consent" 
            name="consent" 
            required
            class="mt-1 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
          >
          <label for="consent" class="ml-3 text-sm text-gray-700">
            I agree to join Job Club and receive personalized guidance emails. I understand my data will be stored securely and used only for career mentoring purposes. <a href="/privacy" class="text-blue-600 hover:underline">Read our privacy policy</a>.
          </label>
        </div>
      </fieldset>

      <!-- Submit Button -->
      <button 
        type="submit" 
        class="w-full bg-blue-600 text-white font-bold py-3 rounded-lg hover:bg-blue-700 transition mb-4"
      >
        Complete Onboarding
      </button>

      <p class="text-xs text-gray-600 text-center">
        Your information is secure and will never be shared. See our <a href="/privacy" class="text-blue-600 hover:underline">privacy policy</a> for details.
      </p>
    </form>

    <!-- Success Message (Hidden by default) -->
    <div id="success-message" class="hidden bg-green-50 border border-green-200 rounded-lg p-6 text-center">
      <h2 class="text-2xl font-bold text-green-900 mb-2">Welcome to Job Club! ðŸŽ‰</h2>
