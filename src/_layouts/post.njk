---
layout: base.njk
---

<article class="post">
    <header class="post-header">
        <h1 class="post-title">{{ title }}</h1>
        <div class="post-meta">
            <time class="post-date" datetime="{{ date.toISOString() }}">{{ date | dateFormat }}</time>
            {% if tags %}
            <div class="post-tags">
                {% for tag in tags %}
                    {% if tag != "blog" %}
                    <span class="tag">{{ tag }}</span>
                    {% endif %}
                {% endfor %}
            </div>
            {% endif %}
        </div>
        {% if description %}
        <p class="post-description">{{ description }}</p>
        {% endif %}
    </header>

    <div class="post-content">
        {{ content | safe }}
    </div>

    <footer class="post-footer">
        <div class="post-navigation">
            {% if collections.blog %}
                {% set previousPost = collections.blog | getPreviousCollectionItem(page) %}
                {% set nextPost = collections.blog | getNextCollectionItem(page) %}
                
                {% if previousPost %}
                <div class="nav-previous">
                    <span class="nav-label">Previous</span>
                    <a href="{{ previousPost.url }}" class="nav-link">{{ previousPost.data.title }}</a>
                </div>
                {% endif %}
                
                {% if nextPost %}
                <div class="nav-next">
                    <span class="nav-label">Next</span>
                    <a href="{{ nextPost.url }}" class="nav-link">{{ nextPost.data.title }}</a>
                </div>
                {% endif %}
            {% endif %}
        </div>
    </footer>
</article>