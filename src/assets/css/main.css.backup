}

/* Info Grids - Flexible, Balanced */
/* stylelint-disable no-descending-specificity -- Intentional cascade for component specificity */
.info-grid,
.activity-list,
.lecture-grid,
.tips-grid,
.tool-grid {
  display: grid;
  gap: var(--space-6);
  margin: var(--space-8) 0;
}

.info-grid,
.tool-grid {
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
}

.info-grid > div,
.activity-list > div,
.tool-grid > div {
  background: var(--white);
  padding: var(--space-6);
  border: 1px solid var(--gray-200);
  border-radius: var(--radius-md);
  transition: box-shadow var(--transition-base);
}

.tips-grid {
  grid-template-columns: 1fr 1fr;
  gap: var(--space-6);
}
/* stylelint-enable no-descending-specificity */

/* CTA Boxes - Subtle, Not Shouty */
.cta-box {
  margin: var(--space-16) 0;
  padding: var(--space-10);
  background: var(--gray-900);
  border-radius: var(--radius-lg);
  text-align: center;
  display: flex;
  gap: var(--space-4);
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}

/* Lesson Content Pages - Focused Learning */
.lesson-content {
  max-width: 800px;
  margin: 0 auto;
}

.lesson-header {
  background: var(--gray-50);
  padding: var(--space-10);
  border-radius: var(--radius-lg);
  border-left: 4px solid var(--brand-primary);
  margin-bottom: var(--space-12);
}

.lesson-number {
  display: inline-block;
  background: var(--brand-primary);
  color: var(--white);
  padding: var(--space-2) var(--space-4);
  border-radius: var(--radius-full);
  font-size: var(--font-size-xs);
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-bottom: var(--space-4);
}

.lesson-header h1 {
  margin: var(--space-4) 0;
  color: var(--gray-900);
  font-size: var(--font-size-4xl);
  font-weight: 600;
  letter-spacing: -0.02em;
  line-height: 1.2;
}

.lesson-description {
  font-size: var(--font-size-lg);
  color: var(--gray-600);
  margin: var(--space-4) 0;
  line-height: 1.6;
}

.lesson-meta {
  display: flex;
  gap: var(--space-6);
  margin-top: var(--space-6);
  padding-top: var(--space-4);
  border-top: 1px solid var(--gray-300);
}

.meta-item {
  font-size: var(--font-size-sm);
  color: var(--gray-600);
  font-weight: 500;
}

.lesson-body {
  background: var(--white);
  padding: var(--space-10);
  border: 1px solid var(--gray-200);
  border-radius: var(--radius-lg);
  margin-bottom: var(--space-12);
}

.lesson-nav {
  background: var(--gray-50);
  padding: var(--space-8);
  border-radius: var(--radius-lg);
  border-top: 2px solid var(--gray-300);
}

.lesson-nav-links {
  display: flex;
  gap: var(--space-4);
  justify-content: space-between;
  align-items: center;
}

.lesson-nav .btn {
  flex: 1;
  max-width: 400px;
  text-align: center;
}

/* ============================================
   Responsive Design - Mobile & Tablet
   ============================================ */

/* ========================================================================
   RESPONSIVE UTILITIES & MEDIA QUERIES
   ======================================================================== */

/* Large Desktop - 1440px+ */
@media (width >= 1440px) {
  .container {
    max-width: 1400px;
  }

  .hero-explorer__title {
    font-size: 5rem;
  }

  .testimonials__grid,
  .free-resources__grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

/* Desktop - 1280px */
@media (width <= 1280px) {
  :root {
    --space-24: 5.5rem;
  }
}

/* Small Desktop - 1024px */
@media (width <= 1024px) {
  :root {
    --space-20: 4rem;
    --space-24: 5rem;
  }

  .hero-title {
    font-size: var(--font-size-5xl);
  }

  .methodology__grid,
  .learning-path__stages,
  .explorer-mindset__grid {
    grid-template-columns: 1fr;
  }
}

/* Tablet - 992px */
@media (width <= 992px) {
  .methodology__grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .learning-path__stages {
    gap: var(--space-6);
  }
}

/* Tablet - 768px */
@media (width <= 768px) {
  :root {
    --font-size-6xl: 2.5rem;
    --font-size-5xl: 2rem;
    --font-size-4xl: 1.75rem;
    --space-16: 3rem;
    --space-20: 3rem;
  }

  /* Header Navigation - Mobile Menu */
  .site-header .container {
    flex-direction: column;
    gap: var(--space-4);
    padding-top: var(--space-4);
    padding-bottom: var(--space-4);
  }

  .site-nav ul {
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-4);
  }

  .site-nav a {
    font-size: var(--font-size-xs);
    padding: var(--space-2);
  }

  /* Hero Section */
  .hero-explorer {
    min-height: auto;
    padding: var(--space-16) var(--space-4);
  }

  .hero-title {
    font-size: var(--font-size-4xl);
    line-height: 1.2;
  }

  .hero-subtitle {
    font-size: var(--font-size-base);
  }

  .hero-stats {
    grid-template-columns: 1fr;
    gap: var(--space-4);
  }

  .stat-item strong {
    font-size: var(--font-size-3xl);
  }

  .hero-cta {
    flex-direction: column;
    width: 100%;
  }

  .hero-cta .btn {
    width: 100%;
    justify-content: center;
  }

  /* Sections - Reduce Padding */
  .journey-preview,
  .methodology,
  .learning-path,
  .explorer-mindset,
  .free-resources,
  .cta-final {
    padding: var(--space-16) 0;
  }

  /* Cards - Full Width on Mobile */
  .testimonials__grid,
  .free-resources__grid {
    grid-template-columns: 1fr;
    gap: var(--space-6);
  }

  /* Buttons */
  .btn-large {
    padding: var(--space-4) var(--space-6);
    font-size: var(--font-size-base);
  }

  /* Page Headers */
  .page-header h1 {
    font-size: var(--font-size-4xl);
  }

  .page-header .lead {
    font-size: var(--font-size-lg);
  }

  /* Content Typography */
  .content h2 {
    font-size: var(--font-size-2xl);
  }

  .content h3 {
    font-size: var(--font-size-xl);
  }

  /* Page-Specific Mobile Adjustments */
  .about-page .cta-box {
    flex-direction: column;
  }

  .lessons-page .lesson-list,
  .resources-page .resource-section {
    padding: var(--space-4);
  }

  .resources-page .tool-grid {
    grid-template-columns: 1fr;
  }

  .instructors-page .info-grid,
  .instructors-page .tips-grid {
    grid-template-columns: 1fr;
  }

  .lesson-nav-links {
    flex-direction: column;
  }

  .lesson-nav .btn {
    max-width: 100%;
  }

  .lesson-header {
    padding: var(--space-6);
  }

  .lesson-body {
    padding: var(--space-6);
  }
}

@media (width <= 480px) {
  .container {
    padding: 0 var(--space-4);
  }

  .hero-title {
    font-size: var(--font-size-3xl);
  }

  .brand-mark {
    width: 32px;
    height: 32px;
    font-size: var(--font-size-xs);
  }

  .site-title {
    font-size: var(--font-size-lg);
  }

  .methodology__card,
  .learning-path__stage,
  .free-resources__card {
    padding: var(--space-6);
  }
}

/* Small Tablet - 640px */
@media (width <= 640px) {
  :root {
    --space-12: 2rem;
  }

  .methodology__grid,
  .explorer-mindset__grid {
    gap: var(--space-4);
  }

  .learning-path__stage {
    padding: var(--space-6);
  }
}

/* Small Mobile - 375px */
@media (width <= 375px) {
  :root {
    --font-size-4xl: 1.5rem;
    --font-size-3xl: 1.25rem;
    --space-10: 2rem;
  }

  .hero-explorer__badge,
  .methodology__icon,
  .learning-path__number {
    font-size: var(--font-size-xs);
  }

  .testimonials__card,
  .methodology__card,
  .free-resources__card {
    padding: var(--space-6);
  }
}
