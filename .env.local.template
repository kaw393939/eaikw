# Environment Variables Template
# Copy this file to .env.local and fill in actual values

# ============================================
# Sanity CMS Configuration
# ============================================
# Get these from sanity.io dashboard
SANITY_PROJECT_ID=your_project_id_here
SANITY_DATASET=production
SANITY_WRITE_TOKEN=your_write_token_here
# Optional: for Sanity Studio development
VITE_SANITY_PROJECT_ID=your_project_id_here

# ============================================
# Notion DB Configuration
# ============================================
# Get from notion.so integrations page
NOTION_API_KEY=ntn_your_api_key_here
NOTION_DATABASE_ID=your_database_id_here

# ============================================
# Discord Integration
# ============================================
# Get from Discord Developer Portal and webhook settings
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxxxx/xxxxx
# Optional: specific channel ID
DISCORD_INTRO_CHANNEL_ID=your_channel_id_here

# ============================================
# Email Service (Phase 3)
# ============================================
# For Zapier or SendGrid emails
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/xxxxx/xxxxx
SENDGRID_API_KEY=SG.your_api_key_here

# ============================================
# Analytics (Phase 3)
# ============================================
# Plausible, Fathom, or other analytics
PLAUSIBLE_DOMAIN=jobclub.example.com
PLAUSIBLE_API_TOKEN=your_api_token_here

# ============================================
# GitHub Pages Deployment
# ============================================
GITHUB_TOKEN=ghp_your_github_token
GITHUB_REPOSITORY=joshua31324324/eaikw

# ============================================
# Development
# ============================================
NODE_ENV=production
